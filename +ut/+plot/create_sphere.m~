function [ax] = create_sphere(n,r)
% Plot transparent sphere and return the axes.
% 
%     Input:  n- number of faces to plot
%             
%             r- sphere radius
%             
%             
% call : [ax] = ut.plot.create_sphere(20,1)

[x,y,z] = sphere(n);
[x,y,z]=[x,y,z]*
ax = surfl(x, y, z);
set(h, 'FaceAlpha', 0.1)

end